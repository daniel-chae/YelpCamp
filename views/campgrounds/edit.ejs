<% include ../partials/header %>
<div class="container">
    <div class="row text-center" style="margin-bottom: 25px">
        <h1>Edit <%= campground.name %></h1>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" placeholder ="title" value="<%= campground.name %>" name="name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="image url" value="<%= campground.image %>" name="image">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="description" value="<%= campground.description %>" name="description">
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row text-center" style="margin-top: 15px">
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>